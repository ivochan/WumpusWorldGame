<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCompat.DayNight" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <!-- color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <!-- a darker variant of the primary color, used for the status bar -->
        <item name="colorPrimaryVariant">@color/lightColorPrimaryVariant</item>
        <!-- a secondary color for controls like checkboxes and text fields -->
        <item name="colorOnPrimary">@color/lightColorOnPrimary</item>
        <!-- colore del testo -->
        <item name="android:textColorPrimary">@color/lightColorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/lightColorPrimaryVariant</item>
        <!-- Window background color -->
        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- Menu colors -->
        <item name="android:itemBackground">@color/indigo_600</item>

        <!-- Preference screen: category title -->
        <item name="colorAccent">@color/light_purple_600</item>
        <!-- summary text -->
        <item name="android:textColorSecondary">@color/light_blue_grey</item>
        <!-- text size -->
        <item name="android:textSize">16dp</item>
        <!-- edit text -->
        <item name="android:editTextColor">@color/dark_indigo_900</item>
        <!-- dialog background -->
        <item name="colorBackgroundFloating">@color/light_indigo_100</item>
        <!-- dialog corner -->
        <item name="dialogCornerRadius">20dp</item>
        <!-- colore alla selezione -->
        <item name="colorControlHighlight">@color/purple_600</item>
        <!-- colore all'attivazione (anche barra della dialog editText) -->
        <item name="colorControlActivated">@color/light_purple_600</item>
        <!-- pulsante switch -->
        <item name="colorSwitchThumbNormal">@color/light_purple_600</item>
    </style>
</resources>

