<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:layout="@layout/game_settings_activity"
        app:key="game_settings_category"
        app:title="@string/game">

        <SwitchPreferenceCompat
            app:key="sound"
            app:title="@string/sound"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:layout="@layout/game_settings_activity"
        app:key="about_category"
        app:title="@string/about">

        <Preference
            app:key="feedback"
            app:title="@string/feedback"
            app:summary="@string/feedback_info"/>

    </PreferenceCategory>

</PreferenceScreen>

