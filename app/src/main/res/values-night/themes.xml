<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCompat.DayNight" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <!-- color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <!-- a darker variant of the primary color, used for the status bar
         (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <!-- a secondary color for controls like checkboxes and text fields -->
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>
        <!-- colore generico del testo -->
        <item name="android:textColorPrimary">@color/darkColorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkColorPrimaryVariant</item>
        <!-- Window background color -->
        <item name="android:windowBackground">@drawable/gradient_background_night</item>
        <!-- Menu colors -->
        <item name="android:itemBackground">@color/darkColorPrimary</item>

    </style>
</resources>