<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/blue_grey"
                android:endColor="@color/dark_blue_grey"
                android:angle="90.0"
                android:type="linear"/>
            <stroke
                android:color="@color/dark_indigo_600"
                android:width="1dp" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
